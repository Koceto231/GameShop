<main id="catalog">
    <section class="game-market">
        <h1>My Games</h1>

        <div class="offer-list">
            {{#each boughtGames}}
            <div class="game">
    <div class="game-img">
        <img src="{{image}}">
    </div>
    <div class="game-info">
        <h1>{{name}}</h1>
        <p class="platform"><span>Platform: </span>{{platform}}</p>
        <p class="ganre"><span>Ganre: </span>{{genre}}</p>
        <p class="finalP"><span>Bought for: </span>${{price}}</p>
        <p id="description"><span>Description:</span> {{description}}</p>
    </div>
</div>
            {{else}}
            <div class="no-offer">
                <p>НЯМА НАЛИЧНИ ИГРИ</p>
            </div>
            {{/each}}
        </div>
    </section>
</main>


