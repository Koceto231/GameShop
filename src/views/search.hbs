<main id="search">
    <section class="game-search">
        <h1>Search Engine</h1>

        <form class="search-form" action="#" method="GET">
            <input type="text" class="search-game" name="name" placeholder="Search here...">
            <select id="platform" name="platform">
                <option value="">-------</option>
                <option value="PC">PC</option>
                <option value="Nintendo">Nintendo</option>
                <option value="PS4">PS4</option>
                <option value="PS5">PS5</option>
                <option value="XBOX">XBOX</option>
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>

        <div class="search-result">
            <div class="search-list">
                {{#each game}}
                <div class="game">
                    <div class="game-img">
                        <img src="{{image}}">
                    </div>
                    <div class="game-info">
                        <h1 class="name">{{name}}</h1>
                        <p><span>Platform: </span>{{platform}}</p>
                        <p><span>Ganre: </span>{{genre}}</p>
                        <p class="price"><span>Price: </span>${{price}}</p>
                        <a href="/games/details/{{_id}}" class="btn-details">Details</a>
                    </div>
                </div>
                {{else}}
                <div class="no-match">
                    <p>Не откриваме това, което търсиш!</p>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
</main>