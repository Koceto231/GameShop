<main id="catalog">
    <section class="game-market">
        <h1>Game Trade Code</h1>

        <div class="offer-list">
            {{#each games}}
            <div class="game">
    <div class="game-img">
        <img src="{{image}}">
    </div>
    <div class="game-info">
        <h1>{{name}}</h1>
        <p><span>Platform: </span>{{platform}}</p>
        <p><span>Ganre: </span>{{genre}}</p>
        <p class="finalP"><span>Price: </span>${{price}}</p>
        <a href="/games/details/{{_id}}" class="btn-details">Details</a>
    </div>
</div>
            {{else}}
            <div class="no-offer">
                <p>НЯМА ОФЕРТИ ЗА ИГРИ</p>
            </div>
            {{/each}}
        </div>
    </section>
</main>


